<h1>Sign Up to Join Our Library!</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %>.</li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user, url: "/signup") do |f| %>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br><br>
    <%= f.label :email %><br>
    <%= f.email_field :email %><br><br>
    <%= f.label :password%>:<br>
    <%= f.password_field :password%><br><br>
    <%= f.submit %>
<% end %>
