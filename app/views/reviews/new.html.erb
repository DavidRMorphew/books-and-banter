<%# Make a method for the title %>
<h1><%= current_user.username + "\'s Review of " + @review.reviewed_book.title %></h1>
<%= form_for @review, url: book_reviews_path do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.label :rating %> (1â€“10)<br>
    <%= f.number_field :rating, in: 1..10 %><br>
    <%= f.label :recommend %>?
    <%= f.check_box :recommend %><br>
    <%= f.label :kid_friendly %>?
    <%= f.check_box :kid_friendly %><br>
    <%= f.submit %>
<% end %>
