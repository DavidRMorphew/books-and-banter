    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.label :rating %> (1â€“10)<br>
    <%= f.number_field :rating, in: 1..10 %><br>
    <%= f.label :recommend %>?<br>
