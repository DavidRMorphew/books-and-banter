<!DOCTYPE html>
<html>
  <head>
    <title>BooksAndBanter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <%= link_to "Our Library's Books", books_path %><br>
    <%= link_to "My Account Page", user_path(current_user) %><br>
    <%= link_to "Log Out", '/logout', method: 'delete' %>
  <% end %>
  <% if flash[:message] %>
    <div class="field_with_errors"><h2><%= flash[:message] %></h2></div>
  <% end %>

    <%= yield %>
  <% if logged_in? %>
    <h4>You are logged in as "<%= current_user.username %>."</h4>
  <% end %>
  </body>
</html>
