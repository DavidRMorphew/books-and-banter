<h1><%= @book.title %></h1>
<h3>Author(s):</h3>
    <%= @book.display_authors %>
<h3>Description:</h3>
    <%= @book.display_description %>
<h3>Publisher:</h3>
    <%= @book.publisher %>
<h3>Publication Date:</h3>
    <%= @book.publication_date %>
<h3>Categories:</h3>
    <%= @book.categories %><br><br>
<%= link_to "Back to All Available Books", books_path %><br>
<% if admin_authorization? %>
    <%= link_to "Edit this Book", edit_book_path(@book.id) %><br>
    <%= link_to "Remove this Book from the Library", "/books/#{@book.id}", method: "delete" %>
<% end %>